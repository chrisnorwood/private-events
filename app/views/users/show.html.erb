<h3><%= @user.name %>'s Hosting:</h3>
<table>
  <tr>
    <th>Title</th>
    <th>Time</th>
  </tr>
  <% if @user.created_events.any?
      @user.created_events.each do |event| %>
        <tr>
          <td><%= link_to event.title, event_url(event)%></td>
          <td><%= event.time %></td>
        </tr>
  <%  end
    else %>
    <tr>
      <td>No hosted events found!</td>
    </tr>
  <% end %>
</table>

<% if @user.events.any? %>
<h3>Previously Attended Events:</h3>
<table>
  <tr>
    <th>Title</th>
    <th>Time</th>
  </tr>
  <% @user.events.past.each do |event| %>
    <tr>
      <td><%= link_to event.title, event_url(event)%></td>
      <td><%= event.time %></td>
    </tr>
  <%  end %>
</table>

<h3>Upcoming Events:</h3>
<table>
  <tr>
    <th>Title</th>
    <th>Time</th>
  </tr>
  <% @user.events.upcoming.each do |event| %>
    <tr>
      <td><%= link_to event.title, event_url(event)%></td>
      <td><%= event.time %></td>
    </tr>
  <%  end %>
</table>
<% end %>